{
	"name": "1_Filter_Data_Flow",
	"properties": {
		"folder": {
			"name": "Training Folder/Learning Data Flows/Day-1"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_CSV_Person",
						"type": "DatasetReference"
					},
					"name": "SourceCsvPerson"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_CSV_Person_With_Middle_Names",
						"type": "DatasetReference"
					},
					"name": "SinkFilteredCsvFile"
				}
			],
			"transformations": [
				{
					"name": "FilterPersonWithMiddleNames"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PersonId as string,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          LocationId as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceCsvPerson",
				"SourceCsvPerson filter(isNull(MiddleName) == false()) ~> FilterPersonWithMiddleNames",
				"FilterPersonWithMiddleNames sink(allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          PersonId,",
				"          FirstName,",
				"          MiddleName,",
				"          LastName,",
				"          LocationId",
				"     )) ~> SinkFilteredCsvFile"
			]
		}
	}
}