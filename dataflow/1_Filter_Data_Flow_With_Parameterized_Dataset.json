{
	"name": "1_Filter_Data_Flow_With_Parameterized_Dataset",
	"properties": {
		"folder": {
			"name": "Training Folder/Learning Data Flows/Day-1"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_CSV_With_Container_Directory_File_Params",
						"type": "DatasetReference"
					},
					"name": "SourceCsvPerson"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "FilterPersonWithMiddleNames"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> SourceCsvPerson",
				"SourceCsvPerson filter(isNull('MiddleName') == false()) ~> FilterPersonWithMiddleNames"
			]
		}
	}
}