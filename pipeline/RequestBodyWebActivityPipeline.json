{
	"name": "RequestBodyWebActivityPipeline",
	"properties": {
		"activities": [
			{
				"name": "Register User Details",
				"description": "Register user information by accessing the REST API BASE URL \"http://restapi.adequateshop.com/api/authaccount/login\" using the POST Request Method and passing the information in the \"Request Body\".",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "http://restapi.adequateshop.com/api/authaccount/login",
					"method": "POST",
					"headers": {
						"Authorization": {
							"value": "@concat('Bearer ', pipeline().parameters.bearerToken)",
							"type": "Expression"
						}
					},
					"body": {
						"value": "@concat('{\"name\":', pipeline().parameters.name, ', \"email\":', pipeline().parameters.email, ', \"password\":', pipeline().parameters.password, '}')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"name": {
				"type": "string",
				"defaultValue": "oindrila chakraborty"
			},
			"email": {
				"type": "string",
				"defaultValue": "oindrila.chakraborty88@gmail.com"
			},
			"password": {
				"type": "string",
				"defaultValue": "123456"
			},
			"bearerToken": {
				"type": "string",
				"defaultValue": "3030401c-c5a5-43c8-8b73-2ab9e6f2ca22"
			}
		},
		"folder": {
			"name": "Practice Activities Folder"
		},
		"annotations": []
	}
}